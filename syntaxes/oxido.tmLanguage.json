{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Oxido",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#entities"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.oxido",
          "match": "\\b(let|if|loop|break|fn)\\b"
        },
        {
          "name": "keyword.operator.comparison.oxido",
          "match": "\\b(==)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.name.oxido",
          "match": "\\b[a-zA-Z]\\b"
        }
      ]
    },
    "entities": {
      "patterns": [
        {
          "name": "entity.name.function.oxido",
          "match": "\\b(print|[a-zA-Z]\\[\\])\\b"
        }
      ]
    },
    "comments": {
      "comments": [
        {
          "name": "comment",
          "match": "\\b//[\\W\\d+]\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.oxido",
          "match": "\\b[0-9]+\\b"
        },
        {
          "name": "constant.language.oxido",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.oxido",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.oxido",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.oxido"
}
